{
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "installCommand": "npm install",
    "framework": null,
    "outputDirectory": "dist",
    "functions": {
        "api/**/*.ts": {
            "runtime": "nodejs20.x",
            "includeFiles": "src/**/*.{ts,js}"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/terms",
            "destination": "/api/index"
        },
        {
            "source": "/privacy",
            "destination": "/api/index"
        }
    ]
}