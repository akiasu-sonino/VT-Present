{
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "installCommand": "npm install",
    "framework": null,
    "outputDirectory": "dist",
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value": "script-src 'self' 'unsafe-inline' https://adm.shinobi.jp https://pagead2.googlesyndication.com; frame-src 'self' https://adm.shinobi.jp; connect-src 'self' https://adm.shinobi.jp;"
                }
            ]
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index"
        },
        {
            "src": "/terms",
            "dest": "/api/index"
        },
        {
            "src": "/privacy",
            "dest": "/api/index"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}